function ivrFieldIdChecked(ivrfieldId,le)
{
	
	if(document.getElementById(ivrfieldId).checked==true)
	{
		if(document.getElementById('div'+ivrfieldId).style.display == 'none')	
		{
			document.getElementById('div'+ivrfieldId).style.display="block";
		}
		if(document.getElementById('add'+ivrfieldId).style.display == 'none')	
		{
			document.getElementById('add'+ivrfieldId).style.display="block";
		}
	}
	else
	{
		if(document.getElementById(ivrfieldId).checked==false)
		{
		document.getElementById('div'+ivrfieldId).style.display="none";
		document.getElementById('add'+ivrfieldId).style.display="none";
		}
	}
}

